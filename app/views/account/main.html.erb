    <script>
      var tabid = 0;
      function tick(id)
      {
        tabid=id;
        for(var vt=0;vt<3;vt++)
        {
          var tt=eval("document.all.tick_"+vt);
          var te=eval("document.all.tab_"+vt);

          if(vt==id)
          {
            tt.className='tab-o'
            te.style.display='';
          }
          else
          {
            tt.className='tab'
            te.style.display='none';
          }
        }
      }
