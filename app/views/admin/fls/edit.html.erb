<table align="CENTER" width="100%" border="0" cellspacing="0" cellpadding="0" class="main">
	<tr>
		<td align="left" height="30" class="data_td_bg">
			&nbsp;&nbsp;&nbsp;管理导航：&nbsp;&nbsp;<a href="/admin/fls/index">链接管理</a>
			&nbsp;|&nbsp; <a href="/admin/fls/new">链接添加</a>
		</td>
	</tr>
</table>
<table align="CENTER" width="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
		<td align="CENTER" valign="MIDDLE">&nbsp;</td>
	</tr>
</table>
<%= form_for([:admin, @fl]) do |f| %>
<table width="100%" border="0" cellspacing="1" cellpadding="2" bgcolor="#CCCCCC">
	<tr>
		<td class="top-nav" bgcolor="#2E9AC8" height="28" colspan="2">&nbsp;&nbsp;&nbsp;<img src="/images/admin/arr_right.gif">&nbsp;&nbsp;
		<strong>修改</strong></td>
	</tr>
	<tr>
		<td class="data_td_label" width="15%" align="RIGHT">分类：</td>
		<td class="data_td_text"><%= f.select :fl_category_id, @fl_categories.map{|n|[n.name, n.id]}, :class => "input_text" %>
		</td>
	</tr>
	<tr>
		<td class="data_td_label" width="15%" align="RIGHT">标题：</td>
		<td class="data_td_text"><input type="text" value="<%= @fl.title %>" name="fl[title]" id="fl_title" class="input_text" onFocus="fEvent('focus',this)" onBlur="fEvent('blur',this)" onMouseOver="fEvent('mouseover',this)" onMouseOut="fEvent('mouseout',this)">
		</td>
	</tr>
	<tr>
		<td class="data_td_label" width="15%" align="RIGHT">链接：</td>
		<td class="data_td_text"><input type="text" value="<%= @fl.url %>" name="fl[url]" id="fl_url" class="input_text" onFocus="fEvent('focus',this)" onBlur="fEvent('blur',this)" onMouseOver="fEvent('mouseover',this)" onMouseOut="fEvent('mouseout',this)">
		</td>
	</tr>
	<tr>
		<td bgcolor="#FFFFFF" colspan="2" align="CENTER" height="30">
			<input type="submit" name="submit" value="提交" class="btn_ok">
		</td>
	</tr>
</table>
<% end %>