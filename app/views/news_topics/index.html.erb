
<div class="position">当前位置： &gt; <a href="/">网站首页</a> &gt; <span>新闻</span></div>

<div class="Main">
	<div class="box">
		<div class="box_title clearfix"><h5>新闻列表</h5></div>
		<ul class="news_list_ul">
		<% for topic in @topics %>
			<li>
				<span><%= topic.created_at.strftime("%Y-%m-%d") %></span>
				<a href="<%= topic.show_url %>" title="<%= topic.title %>" target="_blank"><%= topic.title %></a>
			</li>
		<% end %>
		</ul>
		<div class="pagination">
			<%= will_paginate @topics %>
		</div>
	</div>
</div>